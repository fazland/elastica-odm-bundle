<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Fazland\ODM\ElasticaBundle\DataCollector\ElasticaDataCollector" class="Fazland\ODM\ElasticaBundle\DataCollector\ElasticaDataCollector">
            <tag name="data_collector" template="@ElasticaODM/profiler.html.twig" id="logger" priority="300" />
            <tag name="monolog.logger" channel="elastica" />
            <argument type="service" id="fazland_elastica_odm.document_manager" />
            <argument type="service" id="logger" on-invalid="ignore" />
        </service>
    </services>
</container>
